@page
@model dudego.Pages.TbInvoiceDetails.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>TbInvoiceDetail</h4>
<hr />

<div class="flex">
    <div class="flex flex-row">
        <form id="invoiceForm" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TbInvoiceDetail.IdInvoice" class="control-label"></label>
                <input type="text" id="IdInvoice" name="IdInvoice" value="@ViewData["IdInvoice"]" readonly />
            </div>
            <div class="form-group">
                <label asp-for="TbInvoiceDetail.IdCar" class="control-label"></label>
                <select id="IdCar" name="IdCar" class="form-control" asp-items="@((SelectList)ViewData["IdCar"])"></select>
            </div>
            <div class="form-group">
                <label asp-for="TbInvoiceDetail.DayDuration" class="control-label"></label>
                <input id="DayDuration" name="DayDuration" asp-for="TbInvoiceDetail.DayDuration" class="form-control" />
                <span asp-validation-for="TbInvoiceDetail.DayDuration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TbInvoiceDetail.PriceDay" class="control-label"></label>
                <input id="PriceDay" name="PriceDay" asp-for="TbInvoiceDetail.PriceDay" class="form-control" />
                <span asp-validation-for="TbInvoiceDetail.PriceDay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TbInvoiceDetail.RentalDeposit" class="control-label"></label>
                <input id="RentalDeposit" name="RentalDeposit" asp-for="TbInvoiceDetail.RentalDeposit" class="form-control" />
                <span asp-validation-for="TbInvoiceDetail.RentalDeposit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button id="submit-button">Create</button>

                <input type="button" id="addButton" value="Agregar" class="btn btn-primary" />
            </div>
        </form>

    </div>






    <div class="relative overflow-x-auto shadow-md sm:rounded-lg">
        <table id="tbDetails" class="w-full text-sm text-left rtl:text-right text-gray-500 ">
            <thead class="text-xs text-gray-700 uppercase ">
                <tr>
                    <th scope="col" class="px-6 py-3 bg-gray-50 ">
                        Tiempo arrendamiento
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Precio por dia
                    </th>
                    <th scope="col" class="px-6 py-3 bg-gray-50">
                        Deposito
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Placa
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Factura
                    </th>
                </tr>
            </thead>
            <tbody>
           
             
            </tbody>
        </table>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
